<Window x:Class="Aplicación03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplicación03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="cajaTexto" HorizontalAlignment="Center"  Margin="0,10,0,0" TextWrapping="Wrap" Text="Escribe lo que quieras" VerticalAlignment="Top" Width="740" Height="57" FontSize="32" FontWeight="Bold"/>
        <Label  x:Name="etiquetina" Content="{Binding ElementName=cajaTexto, Path=Text}" HorizontalAlignment="Center" Margin="0,72,0,0" VerticalAlignment="Top" Height="325" Width="740" FontSize="42" FontStyle="Italic"/>

    </Grid>
</Window>
