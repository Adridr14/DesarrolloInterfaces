<Window x:Class="Aplicacion04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplicacion04"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="comboPersonas" ItemsSource="{Binding Path=listaPersonas}" Margin="0,120,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="600"/>
        <Button Content="Añadir persona" HorizontalAlignment="Center" Margin="0,359,0,0" VerticalAlignment="Top" Click="botonAnadir_Click"/>

    </Grid>

</Window>
   
